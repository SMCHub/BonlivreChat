generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  bio       String?
  avatar    String?
  chats     Chat[]

  @@index([email])
}

model Chat {
  id        String    @id @default(uuid())
  title     String    @default("Neuer Chat")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  products  Product[]

  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  role      String
  content   String
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       String
  description String?
  permalink   String?
  imageUrl    String?
  categories  String[]
  chatId      String
  chat        Chat     @relation(fields: [chatId], references: [id])

  @@index([chatId])
}